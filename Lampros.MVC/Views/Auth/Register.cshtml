@model RegistrationRequestDto
<form method="post">
    <div class="container border p-4">
        <div class="row text-center pb-3">
            <h1>Register</h1>
        </div>
        
        <div class="row text-center">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Email" class="form-control" placeholder="Email..." />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
            
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="FirstName" class="form-control" placeholder="FirstName..." />
                <span asp-validation-for="FirstName" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="LastName" class="form-control" placeholder="LastName..." />
                <span asp-validation-for="LastName" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="PhoneNumber" data-val="false" class="form-control" placeholder="PhoneNumber..." />
                
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Password" class="form-control" placeholder="Password..." />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="RoleName" class="form-select" asp-items="@ViewBag.RoleList">
                    <option disabled selected>--Select Role--</option>
                </select>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit">Register</button>
            </div>
        </div>

    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}